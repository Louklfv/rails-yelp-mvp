<h1>Restaurants :</h1>
<% @restaurants.each do |restaurant| %>
  <h2><%= link_to restaurant.name, restaurant_path(restaurant) %> | <%= link_to "🆙", edit_restaurant_path(restaurant) %> | <%= link_to "🗑", restaurant_path(restaurant), method: :delete, data: { confirm: "Are you sure?" } %></h2>
<% end %>
<h3><%= link_to "➕ Add a new restaurant" ,new_restaurant_path %></h3>
